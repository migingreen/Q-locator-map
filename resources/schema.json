{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Locator Map",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "title": "Titel"
    },
    "subtitle": {
      "type": "string",
      "title": "Untertitel",
      "Q:options": {
        "placeholder": "Wird nur bei komplexeren Karten benötigt&#46;"
      }
    },
    "geojsonList": {
      "title": "Elemente auf der Karte",
      "type": "array",
      "items": {
        "anyOf": [
          { "$ref": "#/definitions/geojson-point" },
          { "$ref": "#/definitions/geojson-feature" },
          { "$ref": "#/definitions/geojson-featureCollection" }
        ]
      },
      "minItems": 1,
      "Q:options": {
        "compact": true,
        "expandable": {
          "itemLabelProperty": "properties.label"
        }
      }
    },
    "sources": {
      "title": "Quelle(n)",
      "type": "array",
      "items": {
        "type": "object",
        "title": "Quelle",
        "properties": {
          "text": {
            "title": "Quelle",
            "type": "string"
          },
          "link": {
            "Q:type": "link",
            "title": "Link",
            "type": "object",
            "Q:options": {
              "placeholder": "Direktlink zur Quelle, http://..."
            },
            "properties": {
              "url": {
                "title": "Link",
                "type": "string"
              },
              "isValid": {
                "type": "boolean"
              }
            }
          }
        },
        "required": ["text"]
      }
    },
    "notes": {
      "title": "Anmerkungen",
      "type": "string"
    },
    "options": {
      "title": "Optionen",
      "type": "object",
      "properties": {
        "dimension": {
          "title": "Kartenbereich",
          "type": "object",
          "properties": {
            "bbox": {
              "title": "Kartenbereich definieren",
              "Q:type": "bbox",
              "Q:options": {
                "openInDialog": {
                  "buttonText": "Kartenbereich definieren"
                }
              },
              "type": "array",
              "maxItems": 4,
              "items": {
                "type": "number"
              }
            },
            "useDefaultAspectRatio": {
              "title": "Standard Kartenformat verwenden",
              "type": "boolean",
              "default": true,
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/useDefaultAspectRatio",
                      "fields": ["options.dimension"]
                    }
                  }
                ]
              }
            }
          }
        },
        "baseLayer": {
          "title": "Basiskarte",
          "type": "object",
          "properties": {
            "style": {
              "title": "Kartenstil",
              "type": "string",
              "default": "streets",
              "enum": ["basic", "minimal", "nature", "satellite"],
              "Q:options": {
                "enum_titles": ["Standard", "Minimal", "Natur", "Satellit"]
              }
            },
            "layers": {
              "type": "object",
              "properties": {
                "label": {
                  "title": "Beschriftungen",
                  "type": "boolean",
                  "default": true
                }
              }
            }
          },
          "required": ["style"]
        },
        "minimap": {
          "title": "Übersichtskarte",
          "type": "object",
          "properties": {
            "showMinimap": {
              "title": "Übersichtskarte anzeigen",
              "type": "boolean",
              "default": true
            },
            "options": {
              "type": "object",
              "Q:options": {
                "availabilityChecks": [
                  {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "option-availability/minimap-options",
                      "fields": ["options.minimap.showMinimap"]
                    }
                  }
                ]
              },
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["globe", "region"],
                  "Q:options": {
                    "selectType": "radio",
                    "enum_titles": ["Globus", "Region"]
                  },
                  "default": "globe"
                },
                "region": {
                  "type": "object",
                  "Q:options": {
                    "availabilityChecks": [
                      {
                        "type": "ToolEndpoint",
                        "config": {
                          "endpoint": "option-availability/region",
                          "fields": ["options.minimap.options.type"]
                        }
                      }
                    ]
                  },
                  "properties": {
                    "id": {
                      "type": "string",
                      "default": "",
                      "Q:options": {
                        "selectType": "select",
                        "dynamicSchema": {
                          "type": "ToolEndpoint",
                          "config": {
                            "endpoint": "dynamic-schema/region",
                            "fields": ["geojsonList"]
                          }
                        }
                      }
                    },
                    "label": {
                      "title": "Beschriftung",
                      "type": "string"
                    }
                  }
                },
                "position": {
                  "title": "Position",
                  "type": "string",
                  "enum": [
                    "top-left",
                    "top-right",
                    "bottom-left",
                    "bottom-right"
                  ],
                  "Q:options": {
                    "selectType": "select",
                    "enum_titles": [
                      "links oben",
                      "rechts oben",
                      "links unten",
                      "rechts unten"
                    ]
                  },
                  "default": "bottom-right"
                }
              },
              "required": ["type"]
            }
          },
          "required": ["showMinimap"]
        },
        "highlightRegion": {
          "title": "Region hervorheben",
          "type": "array",
          "Q:options": {
            "layout": "compact",
            "sortable": false
          },
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "title": "Region",
                "type": "string",
                "default": "",
                "Q:options": {
                  "selectType": "select",
                  "dynamicSchema": {
                    "type": "ToolEndpoint",
                    "config": {
                      "endpoint": "dynamic-schema/region",
                      "fields": ["geojsonList"]
                    }
                  }
                }
              }
            }
          }
        },
        "labelsBelowMap": {
          "title": "Beschriftungen unter der Karte anzeigen",
          "type": "boolean",
          "default": false
        },
        "labelsBelowMapOneRow": {
          "title": "Beschriftungen unter der Karte ohne Zeilenumbruch",
          "type": "boolean",
          "default": false,
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "ToolEndpoint",
                "config": {
                  "endpoint": "option-availability/labelsBelowMapOneRow",
                  "fields": ["options.labelsBelowMap", "geojsonList"]
                }
              }
            ]
          }
        },
        "showLegend": {
          "title": "Legende anzeigen",
          "type": "boolean",
          "default": false,
          "Q:options": {
            "availabilityChecks": [
              {
                "type": "UserHasRole",
                "config": {
                  "role": "expert-map"
                }
              }
            ]
          }
        }
      }
    }
  },
  "required": ["title"],
  "definitions": {
    "geojson-point": {
      "type": "object",
      "title": "Punkt",
      "Q:type": "geojsonPoint",
      "required": ["type", "properties"],
      "properties": {
        "type": {
          "type": "string",
          "default": "Feature",
          "enum": ["Feature"]
        },
        "geometry": {
          "type": "object",
          "required": ["type", "coordinates"],
          "properties": {
            "type": {
              "type": "string",
              "default": "Point",
              "enum": ["Point"]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "number"
              }
            }
          }
        },
        "properties": {
          "type": "object",
          "title": "Optionen",
          "required": ["type", "labelPosition"],
          "properties": {
            "type": {
              "title": "Markertyp",
              "type": "string",
              "default": "point",
              "enum": [
                "point",
                "point-prominent",
                "point-outline",
                "point-outline-prominent",
                "uncertain-place",
                "label",
                "event",
                "epicenter",
                "explosion",
                "fire",
                "flag",
                "airplane",
                "bike",
                "bus",
                "cable-car",
                "car",
                "train",
                "tram",
                "ship",
                "village",
                "skyscraper",
                "factory",
                "cemetary",
                "house",
                "castle",
                "monument",
                "mountain",
                "park",
                "port",
                "rocket"
              ],
              "Q:options": {
                "enum_titles": [
                  "Punkt",
                  "Punkt (prominent)",
                  "Punktumrahmung",
                  "Punktumrahmung (prominent)",
                  "Ort (ungenau)",
                  "Gebiet",
                  "Ereignis",
                  "Epizentrum",
                  "Explosion",
                  "Feuer",
                  "Flagge",
                  "Flugzeug",
                  "Velo",
                  "Bus",
                  "Seilbahn",
                  "Auto",
                  "Zug",
                  "Tram",
                  "Schiff",
                  "Stadt",
                  "Hochhaus",
                  "Fabrik",
                  "Friedhof",
                  "Haus",
                  "Monument",
                  "Schloss",
                  "Berg",
                  "Park",
                  "Hafen",
                  "Rakete"
                ]
              }
            },
            "label": {
              "title": "Beschriftung",
              "type": "string",
              "default": ""
            },
            "labelPosition": {
              "title": "Position der Beschriftung",
              "type": "string",
              "default": "top",
              "enum": [
                "top",
                "bottom",
                "left",
                "right",
                "topleft",
                "topright",
                "bottomleft",
                "bottomright"
              ],
              "Q:options": {
                "enum_titles": [
                  "oben",
                  "unten",
                  "links",
                  "rechts",
                  "oben links",
                  "oben rechts",
                  "unten links",
                  "unten rechts"
                ]
              }
            },
            "useForInitialView": {
              "title": "Für die Berechnung der initialen Ansicht einbeziehen",
              "type": "boolean",
              "default": true,
              "Q:options": {
                "hideInEditor": true
              }
            }
          }
        }
      }
    },
    "geojson-featureCollection": {
      "type": "object",
      "Q:type": "json",
      "title": "GeoJSON FeatureCollection",
      "required": ["features"],
      "properties": {
        "type": {
          "type": "string",
          "default": "FeatureCollection",
          "enum": ["FeatureCollection"]
        },
        "features": {
          "type": "array",
          "items": { "$ref": "#/definitions/geojson-feature" }
        }
      },
      "Q:options": {
        "availabilityChecks": [
          {
            "type": "UserHasRole",
            "config": {
              "role": "expert-map"
            }
          }
        ]
      }
    },
    "geojson-feature": {
      "type": "object",
      "Q:type": "json",
      "title": "GeoJSON Feature",
      "Q:options": {
        "availabilityChecks": [
          {
            "type": "UserHasRole",
            "config": {
              "role": "expert-map"
            }
          }
        ]
      },
      "properties": {
        "type": {
          "type": "string",
          "default": "Feature",
          "enum": ["Feature"]
        },
        "geometry": {
          "title": "geometry",
          "description": "One geometry as defined by GeoJSON",
          "type": "object",
          "oneOf": [
            {
              "title": "Point",
              "type": "object",
              "properties": {
                "type": { "enum": ["Point"] },
                "coordinates": { "$ref": "#/definitions/position" }
              }
            },
            {
              "title": "MultiPoint",
              "type": "object",
              "properties": {
                "type": { "enum": ["MultiPoint"] },
                "coordinates": { "$ref": "#/definitions/positionArray" }
              }
            },
            {
              "title": "LineString",
              "type": "object",
              "properties": {
                "type": { "enum": ["LineString"] },
                "coordinates": { "$ref": "#/definitions/lineString" }
              }
            },
            {
              "title": "MultiLineString",
              "type": "object",
              "properties": {
                "type": { "enum": ["MultiLineString"] },
                "coordinates": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/lineString" }
                }
              }
            },
            {
              "title": "Polygon",
              "type": "object",
              "properties": {
                "type": { "enum": ["Polygon"] },
                "coordinates": { "$ref": "#/definitions/polygon" }
              }
            },
            {
              "title": "MultiPolygon",
              "type": "object",
              "properties": {
                "type": { "enum": ["MultiPolygon"] },
                "coordinates": {
                  "type": "array",
                  "items": { "$ref": "#/definitions/polygon" }
                }
              }
            }
          ]
        },
        "properties": {
          "type": "object"
        }
      }
    },
    "position": {
      "description": "A single position",
      "type": "array",
      "minItems": 2,
      "items": { "type": "number" }
    },
    "positionArray": {
      "description": "An array of positions",
      "type": "array",
      "items": { "$ref": "#/definitions/position" }
    },
    "lineString": {
      "description": "An array of two or more positions",
      "allOf": [{ "$ref": "#/definitions/positionArray" }, { "minItems": 2 }]
    },
    "linearRing": {
      "description": "An array of four positions where the first equals the last",
      "allOf": [{ "$ref": "#/definitions/positionArray" }, { "minItems": 4 }]
    },
    "polygon": {
      "description": "An array of linear rings",
      "type": "array",
      "items": { "$ref": "#/definitions/linearRing" }
    }
  }
}
