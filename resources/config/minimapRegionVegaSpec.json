{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": "none",
  "signals": [],
  "data": [],

  "projections": [
    {
      "name": "projection",
      "type": { "signal": "projection" },
      "scale": { "signal": "scaleFactor" },
      "translate": { "signal": "[translateX, translateY]" },
      "rotate": [{ "signal": "rotate0" }, { "signal": "rotate1" }, 0]
    }
  ],

  "marks": [
    {
      "type": "shape",
      "from": { "data": "region" },
      "encode": {
        "update": {
          "fill": { "signal": "landColor" },
          "stroke": { "signal": "landOutlineColor" },
          "strokeWidth": { "value": 0.5 },
          "strokeOpacity": { "value": 0.8 }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "projection": "projection"
        }
      ]
    },
    {
      "type": "text",
      "encode": {
        "update": {
          "x": { "signal": "translateX" },
          "y": { "signal": "translateY" },
          "align": { "value": "center" },
          "baseline": { "value": "middle" },
          "text": { "signal": "label" },
          "font": { "signal": "textFont" },
          "fontSize": { "signal": "textSize" },
          "fontWeight": { "value": 100 },
          "fill": { "signal": "textColor" },
          "lineBreak": { "value": " " }
        }
      }
    }
  ]
}
